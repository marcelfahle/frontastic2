{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "composite": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "./dist/",
    "rootDir": "./src/"
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
